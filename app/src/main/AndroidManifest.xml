<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.aloha.app.aloha">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".UI.SplahScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.MainActivity" />
        <activity android:name=".UI.ListServicesActivity" />
        <activity android:name=".UI.SignUpActivity" />
        <activity android:name=".UI.ForgotPasswordActivity" />
        <activity android:name=".UI.HelpActivity" />
        <activity android:name=".UI.QuotationActivity" />
        <activity android:name=".UI.MyServicesActivity"></activity>
    </application>

</manifest>